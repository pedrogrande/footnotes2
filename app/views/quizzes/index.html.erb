<h1>Quizzes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Year group</th>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
              <td><%= quiz.year_group %></td>
              <td><%= quiz.name %></td>
              <td><%= quiz.description %></td>
              <td><%= quiz.image %></td>
              <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Delete', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quiz', new_quiz_path %>
